// Program to print whether number entered by the user is positive, negative, or zero

#include <iostream>
using namespace std;

int main() {

  int number;

  cout << "Enter an integer: ";
  cin >> number;

  // checks if the number is positive, negative, or zero
  if (number > 0) {
    cout << "You entered a positive integer: " << number << endl;
}
  else if (number < 0){
    cout << "You entered a negative integer: " << number << endl;
}
  else {
    cout << "You entered the integer zero: " << number << endl;
}

  cout << "This statement is always executed.";

  return 0;
}
